    "@types/graphql": "^14.5.0",
    "@types/jest": "29.5.1",
    "@types/lodash": "^4.14.195",
    "@types/node": "18.16.12",
    "@types/supertest": "^2.0.11",
    "@types/wait-on": "^5.3.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
