    "body-parser": "^1.20.2",
    "bullmq": "^3.15.6",
    "cookie-parser": "^1.4.6",
    "graphql": "^16.6.0",
    "lodash": "^4.17.21",
    "mikro-orm": "^5.7.12",
    "nats": "^2.14.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "wait-on": "^7.0.1"
  },
